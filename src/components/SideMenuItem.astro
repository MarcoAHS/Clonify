---
interface Props {
    href?: string;
}

const { href } = Astro.props
---

<li class="w-full">
    <a class="flex gap-1 lg:gap-4 text-zinc-400 rounded-lg hover:text-zinc-100 hover:bg-zinc-700 items-center justify-center lg:justify-start py-2 px-5 font-medium transition duration-300" href={href}>
        <slot/>
    </a>
</li>